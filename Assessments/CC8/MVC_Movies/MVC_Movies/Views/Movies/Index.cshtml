@model IEnumerable<MVC_Movies.Models.Movie>

<h2>All Movies</h2>
<table class="table table-striped table-bordered">
    <tr>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Date of Release</th>
        <th>Actions</th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Moviename</td>
            <td>@m.DirectorName</td>
            <td>@m.DateofRelease.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = m.Mid }) |
                @Html.ActionLink("Delete", "Delete", new { id = m.Mid })
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Add New Movie", "Create", null, new { @class = "btn btn-primary" })</p>