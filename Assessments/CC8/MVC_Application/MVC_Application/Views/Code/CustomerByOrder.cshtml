
@model MVC_Application.Models.Customer

<h2>Customer Details for Order 10248</h2>

@if (Model != null)
{
    <p><strong>CustomerID:</strong> @Model.CustomerID</p>
    <p><strong>CompanyName:</strong> @Model.CompanyName</p>
    <p><strong>ContactName:</strong> @Model.ContactName</p>
    <p><strong>Country:</strong> @Model.Country</p>
    <p><strong>City:</strong> @Model.City</p>
}
else
{
    <p>No customer found for this order.</p>
}
