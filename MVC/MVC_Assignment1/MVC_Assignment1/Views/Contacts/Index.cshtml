﻿@model IEnumerable<MVC_Assignment1.Models.Contact>

@{
    ViewBag.Title = "Contacts List";
}

<h2>Contacts</h2>

<p>
    @Html.ActionLink("Add New Contact", "Create")
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>